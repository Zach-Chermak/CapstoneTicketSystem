@model Capstone.Models.TicketModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>TicketModel</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CreationDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CreationDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Subject)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Subject)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Info)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Info)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Priority)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Priority)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CreationId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CreationId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AdminId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AdminId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.LastUpdate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LastUpdate)
        </dd>
        <!--New Comment section-->
        <dt class="col-sm-2">
            Comments
        </dt>
        <dd class="col-sm-10">
            <div style="max-height: 200px; overflow-y: auto; border: 1px solid #ccc; padding: 10px; background-color: #f9f9f9;">
                @if (Model.Comments != null && Model.Comments.Any())
                {
                    <ul class="list-unstyled mb-0">
                        @foreach (var comment in Model.Comments)
                        {
                            <li>@comment</li>
                        }
                    </ul>
                }
                else
                {
                    <p class="text-muted">No comments available.</p>
                }
            </div>
        </dd>
    </dl>
</div>
<div>
    <a href="@Url.Action("EditTicketUser", "Ticket", new { id = Model.Id })" class="btn btn-sm btn-outline-primary">Edit Ticket</a>
    <a asp-action="Index">Back To Dashboard</a>
</div>
