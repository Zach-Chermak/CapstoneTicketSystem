@model Capstone.Models.TicketModel

@{
    ViewData["Title"] = "Details";
}

<h1>Edit Ticket</h1>

<form asp-action="UpdateTicket" method="post">




    <div class="form-group row">
        <label asp-for="Id" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Id" class="form-control" readonly />
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="CreationDate" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="CreationDate" class="form-control" type="date" readonly />
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Subject" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Subject" class="form-control" />
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Info" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <textarea asp-for="Info" class="form-control"></textarea>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Priority" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Priority" class="form-control" />
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="CreationId" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="CreationId" class="form-control" readonly />
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="AdminId" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="AdminId" class="form-control" readonly />
        </div>
    </div>



    <div class="form-group mt-3">
        <button type="submit" class="btn btn-primary">Save Changes</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        <a href="@Url.Action("DeleteTicket", "Ticket", new { id = Model.Id })" class="btn btn-sm btn-outline-primary">Delete Ticket</a>
    </div>
</form>


